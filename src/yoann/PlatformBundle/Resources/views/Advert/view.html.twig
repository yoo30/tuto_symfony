{# src/OC/PlatformBundle/Resources/view/Advert/view.html.twig #}

{% extends "yoannPlatformBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block yoannplatform_body %}

  {# On vérifie qu'une image soit bien associée à l'annonce #}
    {% if advert.image is not null %}
      <img src="{{ advert.image.url }}" alt="{{ advert.image.alt }}">
    {% endif %}

  <h2>{{ advert.title }}</h2>
  <i>Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i>

  <div class="well">
    {{ advert.content }}
    {% if not advert.categories.empty %}
      <p>
        Cette annonce est parue dans les catégories suivantes :
        {% for category in advert.categories %}
          {{ category.name }}{% if not loop.last %}, {% endif %}
        {% endfor %}
      </p>
    {% endif %}
  </div>

  <div class="well">
      {% if listAdvertSkills|length > 0 %}
        <div>
          Cette annonce requiert les compétences suivantes :
          <ul>
            {% for advertSkill in listAdvertSkills %}
              <li>{{ advertSkill.skill.name }} : niveau {{ advertSkill.level }}</li>
            {% endfor %}
          </ul>
        </div>
    {% endif %}
  </div>

  <h2>Liste des commentaires :</h2>
  <div class="well">
  <ul>
    {% for listApp in listApplications %}

    <li>Posté par :{{listApp.author}}<i> le {{listApp.date|date('d/m/Y')}} </i><br/>Son message :{{listApp.content}},</li><br/>
    
  {% else %}
    <li>Pas de commentaires</li>

    {% endfor %}
  </ul>
  </div>

  <p>
    <a href="{{ path('yoann_platform_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>
    <a href="{{ path('yoann_platform_edit', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'annonce
    </a>
    <a href="{{ path('yoann_platform_delete', {'id': advert.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l'annonce
    </a>
  </p>

{% endblock %}